<style>
html {
    background:url(<%= asset_path 'login-bg.png' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

#left-sign-in {
	margin-top: 30px;
	width: 400px;
	border-right: 1px solid black;
	float: left;
}

#right-create-user {
	margin-top: 30px;
	margin-left: 80px;
  float: left;
}

#sign-ins {
	display: block;
	padding-bottom: 40px;
	border-bottom: 1px solid black;
	border-top: 1px solid black;
}

#login {
	background-color: #fff;
}

</style>

<div id="login" class="clearfix">

  <h1>Welcome to Tour Planner!</h1> 
  <%= render 'layouts/errors' %>
  
<div id="sign-ins" class="clearfix">

<div id="left-sign-in"> 
	<form action="<%= login_url %>" method="post">
	  <input type="hidden" 
			 name="authenticity_token" 
			 value="<%= form_authenticity_token %>">

	  <div class="input">
	   <label for="user_email">Sign In</label>
	   <input id="user_email"
	   		 name="user[email]"
			 type="text"
			 value="<%= @user.email %>"
			 placeholder="Email">
	  </div>

	  <div class="input">
	   <label for="user_password">Password</label>
	   <input id="user_password"
	  		 name="user[password]"
			 type="password">
	  </div>
	
	  <div class="submit">	 
	   <input type="submit" value="Sign In">
	  </div>
	</form>
</div>

<div id="right-create-user">
	<form id="create" action="<%= users_url %>" method="post">
	  <input type="hidden" 
			 name="authenticity_token" 
			 value="<%= form_authenticity_token %>">
	  
	  <div class="input">   
	  <label for="user_email">Create A New Account</label>
	  <input id="user_email"
	   		 name="user[email]"
			 type="text"
			 placeholder="Email">
      </div>
	  
	  <div class="input">
	  <label for="user_password">Password</label>
	  <input id="user_password"
	  		 name="user[password]"
			 type="password">
	  </div>
	
	  <div class="submit"> 
	  <input type="submit" value="Create Account">
      </div>
	</form>
	
</div>

</div>

<a href="<%= %>">
	<div class="all-shows-box">
		<h2> Take A Guided Tour </h2>
	</div>
</a>
</div>