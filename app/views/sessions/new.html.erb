<div id="login">

  <h1>Sign In</h1>
  <%= render 'layouts/errors' %>
  
	<form action="<%= login_url %>" method="post">
	  <input type="hidden" 
			 name="authenticity_token" 
			 value="<%= form_authenticity_token %>">

	  <div class="input">
	  <label for="user_email">Email</label>
	  <input id="user_email"
	   		 name="user[email]"
			 type="text"
			 value="<%= @user.email %>">
	  </div>

	  <div class="input">
	  <label for="user_password">Password</label>
	  <input id="user_password"
	  		 name="user[password]"
			 type="password">
	  </div>
	
	  <div class="submit">	 
	  <input type="submit" value="Sign In">
	  </div>
	</form>

<a href="<%= new_user_url %>">Or Create Account</a>
</div>