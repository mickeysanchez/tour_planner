<div id="show-heading" class="clearfix">
	<h1> <%= @band.name %> </h1>

	<div id="show-image">
	  <%= image_tag @band.image.url(:thumb), class: "header-image" %>
    </div>
	
	<% if current_user.is_band_admin?(@band)%>
	<div id="change-image">
		<div class="edit">
		<% if current_user.is_band_admin?(@band) %>
			<%= link_to 'Edit Band', edit_band_url(@band)%> |
			<%= link_to 'Delete Band', band_url(@band), method: :delete %> 
		<% end %>
		</div>
	
		<form id="edit-image" action="<%= band_url(@band) %>" method="post"   enctype="multipart/form-data">
		  <input type="hidden" name="_method" value="put">
	
		  <input type="hidden" 
				 name="authenticity_token" 
				 value="<%= form_authenticity_token %>">

		  <div class="input">
		    <label for="band_image">Change Your Image</label>
		    <input id="band_image" name="band[image]" type="file">
		  </div>
  
		  <div class="submit">
		    <input type="submit" value="Update Image">
		  </div>
		</form>
</div>
	<% end %>
	
	<h3> Members </h3>
	<ul id="members-list">
	    <% if !current_user.is_in_band?(@band) && !current_user.has_requested_membership?(@band) %>
	  	  <li class="member-list-item">
	  		 <%= button_to "Request Band Membership", band_member_requests_url(@band) %> 
	  	  </li>
	    <% end %>
	<% @band.band_memberships.each do |membership| %>
	  <li class="member-list-item">
		  <a href="<%= user_url(membership.member) %>">
		  <%= membership.member.email %> 
	  
		  <% if membership.role %>
			  - <%= membership.role %>
		  <% end %>
	  
		  <% if current_user.is_in_band?(@band) %>
			  <%= membership.member.is_band_admin?(@band) ? "(Admin)" : "" %>
		  <% end %>
		  </a>
	  
		  <% if current_user.is_band_admin?(@band) && !membership.member.is_band_admin?(@band) %>
			  <%= button_to "Make Admin", make_admin_url(membership), method: :put %>
		  <% end %>
	  </li>
	<% end %>
	</ul>

</div>

<% if @band.events.count > 0 %>
	<a href="<%= band_events_url(@band) %>">
		<div class="all-shows-box">
			<h2> All <%= @band.name + "'s" %> Shows </h2>
		</div>
	</a>
<% end %>



<% if @band.tours.count > 0 %>
	<h2> Tours (<%= @band.tours.count %>) </h2>
	<%= render 'tours/list', tours: @tours %>
<% end %>

<% if current_user.is_band_admin?(@band) && @band.events.count > 0 %>
	<a href="<%= new_band_tour_url(@band) %>">
		<div class="add-box">
			<h2> + Create a Tour </h2>
		</div>
	</a>
<% end %>

<h2> Events (<%= @band.events.count %>) </h2>
<% if current_user.is_band_admin?(@band) %>
	<%= render 'layouts/errors' %>
	<%= button_to "Grab Shows From Seat Geek", band_grab_shows_url(@band) %>

	<a href="<%= new_band_event_url(@band) %>">
		<div class="add-box">
			<h2> + Add Show </h2>
		</div>
	</a>
<% end %>

<%= render 'events/list', events: @events, hide_band_name: true %>