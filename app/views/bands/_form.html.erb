<h2>Create New Band</h2>

<%= render "layouts/errors"%>

<form id="band-form" action="<%= bands_url %>" method="post">
  <input type="hidden" 
		 name="authenticity_token" 
		 value="<%= form_authenticity_token %>">
		   
  <label for="band_name">Band Name</label>
  <input id="band_name"
   		 name="band[name]"
		 type="text"
		 value="<%= @band.name %>">

  <label for="band_role">Your Role (optional)</label>
  <input id="band_role"
  		 name="band_membership[role]"
		 type="text"
		 value="<%= @band.role_of(current_user) %>">
		 
  <input type="submit" value="Create Band">
</form>